<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_40sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgRichy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:src="@mipmap/richy" />

        <customtools.MediumTextView
            android:id="@+id/txtUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgRichy"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:text="Update Your App"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />

        <customtools.RegularTextView
            android:id="@+id/txtUpdateNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdate"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:text="A new version of App is available with new features, a faster experience and fixes. It takes typically less than 60 seconds."
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <customtools.RegularButton
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:text="      Update      "
                android:textColor="@color/colorWindowBackground"
                android:textSize="18sp" />

            <customtools.MediumTextView
                android:id="@+id/txtNotNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnUpdate"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="NOT NOW"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>