<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"

    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_black_24dp_new_"
            android:layout_gravity="right"
            android:padding="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">


            <customtools.MediumTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="RupeeRedee"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/gray_btn_bg_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <customtools.RegularTextView
                        android:id="@+id/txtAmountbefore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hi, You have eligble for 90 days EMI loan. Would you want to continue with a 90 Day Tenure."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relEMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selectemi"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <customtools.MediumTextView
                        android:id="@+id/one"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"

                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="1" />

                    <customtools.MediumTextView
                        android:id="@+id/two"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"

                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="2" />

                    <customtools.MediumTextView
                        android:id="@+id/three"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="3" />

                    <customtools.MediumTextView
                        android:id="@+id/four"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="4" />

                    <customtools.MediumTextView
                        android:id="@+id/five"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="5" />

                    <customtools.MediumTextView
                        android:id="@+id/six"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="6" />

                    <customtools.MediumTextView
                        android:id="@+id/seven"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="7" />

                </LinearLayout>

                <customtools.MediumTextView
                    android:id="@+id/selectemi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select EMI Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customtools.MediumTextView
                    android:id="@+id/ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apply_btn_bg"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Ok, I want to apply for Instalment Loan "
                    android:textColor="@color/white" />

                <customtools.MediumTextView
                    android:id="@+id/cancle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/apply_btn_bg"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="No, I want to repay within 30 Days"
                    android:textColor="@color/white" />

                <customtools.MediumTextView
                    android:id="@+id/apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="@dimen/_5sdp"
                    android:text="Apply"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>