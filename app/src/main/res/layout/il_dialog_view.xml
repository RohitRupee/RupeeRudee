<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imgCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_black_24dp_new_"
            android:layout_gravity="right"
            android:padding="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">


            <customtools.MediumTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="EMI Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/gray_btn_bg_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <customtools.MediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan Amount Requested"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <customtools.RegularTextView
                    android:id="@+id/loanamountrequestred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <customtools.MediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount to be Credited"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/imgInfo"
                        android:layout_width="20dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/tip_text_height"
                        android:src="@drawable/info" />
                </LinearLayout>

                <customtools.RegularTextView
                    android:id="@+id/disamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <customtools.MediumTextView
                    android:id="@+id/txtAmountbelow30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan Tenure"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <customtools.RegularTextView
                    android:id="@+id/repamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:text="3 Months"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <customtools.MediumTextView
                        android:id="@+id/txtAmountbefore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly EMI (Approx)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                    <ImageView
                        android:id="@+id/imgInfoEmi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/tip_text_height"
                        android:src="@drawable/info" />
                </LinearLayout>


                <customtools.RegularTextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:text="Upto 10%"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relEMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selectemi"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <customtools.MediumTextView
                        android:id="@+id/one"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"

                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="1" />

                    <customtools.MediumTextView
                        android:id="@+id/two"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"

                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="2" />

                    <customtools.MediumTextView
                        android:id="@+id/three"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="3" />

                    <customtools.MediumTextView
                        android:id="@+id/four"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="4" />

                    <customtools.MediumTextView
                        android:id="@+id/five"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="5" />

                    <customtools.MediumTextView
                        android:id="@+id/six"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="6" />

                    <customtools.MediumTextView
                        android:id="@+id/seven"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/adhhar_selection_bg"
                        android:gravity="center"
                        android:text="7" />

                </LinearLayout>

                <customtools.MediumTextView
                    android:id="@+id/selectemi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select EMI Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>



            <customtools.MediumTextView
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Apply"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>